{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "jsx": "react",
    "sourceMap": false,
    "outDir": "./dist/server",
    "strict": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "typeRoots": ["./src/@types"],
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/server/**/*",
    "./src/@types"
  ]
}
